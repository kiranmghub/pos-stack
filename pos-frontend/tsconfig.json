{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "react-jsx",

    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },

    "types": ["vite/client", "node", "react", "react-dom", "vitest/globals", "@testing-library/jest-dom"],

    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,

    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src", "vite.config.ts"]
}
